<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_spinner"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_below="@id/relative"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.example.our_graduationproject.CustomSpinner.CustomSpinner
            android:id="@+id/type_spinner"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_31sdp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/spinner"
            android:dropDownVerticalOffset="40dp"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="end" />

    </LinearLayout>
<GridLayout
    android:layout_below="@id/linear_spinner"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="3"
    android:layout_gravity="center_horizontal"
    android:useDefaultMargins="true"
    android:paddingTop="@dimen/_4sdp"
    android:orientation="horizontal">
    <ImageView
        android:layout_margin="@dimen/_4sdp"
        android:id="@+id/button3"
        android:layout_height="@dimen/_90sdp"
        android:scaleType="center"
        android:layout_width="@dimen/_115sdp"
        android:layout_column="0"
        android:src="@drawable/social_2"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="Button1" />
    <ImageView
        android:layout_margin="@dimen/_4sdp"
        android:id="@+id/button2"
        android:layout_height="@dimen/_90sdp"
        android:layout_width="@dimen/_115sdp"

        android:layout_column="1"
        android:src="@drawable/social_4"
        android:layout_row="0"
        android:text="Button1" />
    <ImageView
        android:layout_margin="@dimen/_4sdp"

        android:id="@+id/button4"
        android:layout_height="@dimen/_90sdp"
        android:layout_width="@dimen/_115sdp"
        android:layout_column="0"
        android:src="@drawable/social_3"
        android:layout_row="1"
        android:text="Button1" />
    <ImageView
        android:layout_margin="@dimen/_4sdp"

        android:id="@+id/button5"
        android:layout_height="@dimen/_90sdp"
        android:layout_width="@dimen/_115sdp"
        android:layout_column="1"
        android:src="@drawable/social_5"
        android:layout_row="1"
        android:text="Button1" />
    <ImageView
android:layout_gravity="fill_horizontal"
         android:id="@+id/button6"
        android:layout_height="@dimen/_95sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_columnSpan="2"
         android:src="@drawable/social_1"
        android:layout_row="2"
        android:layout_margin="@dimen/_4sdp"
        android:text="Button1" />

</GridLayout>
  </RelativeLayout>