<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_3sdp"
    android:layoutDirection="ltr"

    android:gravity="center_horizontal"
     tools:context=".UI.logoOrder"
    android:orientation="vertical">
    <RelativeLayout
        android:layoutDirection="ltr"
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/ellipse_9"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_width="@dimen/_30sdp"
            android:src="@drawable/arrow"
            android:layout_height="@dimen/_30sdp"/>
        <TextView
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_toRightOf="@+id/img"
            android:layout_marginTop="@dimen/_11sdp"
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Logo and visual identity"
            android:textColor="#000000"

            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/salsa"
            />

    </RelativeLayout>



        <LinearLayout
            android:id="@+id/linear_spinner"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_below="@id/relative"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.example.our_graduationproject.CustomSpinner.CustomSpinner
                android:layout_height="@dimen/_31sdp"
                android:layout_width="@dimen/_70sdp"
                android:dropDownVerticalOffset="40dp"
                android:layout_margin="6dp"
                android:background="@drawable/spinner"
                android:id="@+id/color_spinner"
                android:gravity="center"

                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.example.our_graduationproject.CustomSpinner.CustomSpinner
                android:layout_height="@dimen/_31sdp"
                android:layout_width="@dimen/_70sdp"
                android:dropDownVerticalOffset="40dp"
                android:layout_margin="6dp"
                android:background="@drawable/spinner"
                android:id="@+id/interest_spinner"

                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.example.our_graduationproject.CustomSpinner.CustomSpinner
                android:layout_height="@dimen/_31sdp"
                android:layout_width="@dimen/_70sdp"
                android:dropDownVerticalOffset="40dp"
                android:layout_margin="6dp"
                android:background="@drawable/spinner"
                android:textAlignment="textEnd"
                android:id="@+id/type_spinner"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="end" />

        </LinearLayout>
      <GridView
          android:layout_width="match_parent"
          android:numColumns="3"
           android:layout_height="@dimen/_330sdp"
          android:id="@+id/gride"
          android:horizontalSpacing="@dimen/_2sdp"

          android:verticalSpacing="@dimen/_3sdp"
           ></GridView>

    <TextView

        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_25sdp"
         android:layout_centerHorizontal="true"
         android:background="@drawable/button3"
        android:fontFamily="@font/salsa"
        android:gravity="center"
        android:text="continue"
        android:textColor="#000000"
        android:textSize="@dimen/_10sdp" />
</LinearLayout>