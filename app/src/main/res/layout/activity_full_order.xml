<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
     tools:context=".UI.FullOrder">






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_10sdp"
         >

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:id="@+id/linear_1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginRight="@dimen/_42sdp"
            android:layout_gravity="center_vertical"
            android:id="@+id/chat"
              />
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_21sdp"
            android:fontFamily="@font/salsa"
            android:text="Hi Musab!"
            android:textColor="#000000"
            android:textSize="@dimen/_19sdp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/profil_img" />

</LinearLayout>



        <TextView
        android:background="@drawable/button4"
android:layout_marginTop="@dimen/_6sdp"
         android:id="@+id/title"
            android:padding="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentTop="true"
         style="@style/Font"
         />
        <TextView
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@drawable/button4"

            android:id="@+id/type"
            android:padding="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentTop="true"
            style="@style/Font"
            />
    <TextView
         android:background="@drawable/button4"
        android:layout_marginTop="@dimen/_6sdp"

        android:id="@+id/industry"
        android:padding="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentTop="true"
        style="@style/Font"
        />


    <TextView
        android:background="@drawable/button4"
        android:layout_marginTop="@dimen/_6sdp"

        android:id="@+id/idea"
        android:padding="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentTop="true"
        style="@style/Font"
        />

    <TextView
        android:background="@drawable/button4"
        android:layout_marginTop="@dimen/_6sdp"

        android:id="@+id/description"
        android:padding="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentTop="true"
        style="@style/Font"
        />
        <LinearLayout
            android:layout_marginTop="@dimen/_6sdp"

            android:padding="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:orientation="horizontal"
            style="@style/Font"
            android:background="@drawable/button4"
            android:layout_alignParentTop="true"


            >
    <TextView

        android:id="@+id/colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="colors :"
        />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:scrollbars="horizontal" />
    </LinearLayout>
        <TextView
            android:background="@drawable/button4"
            android:layout_marginTop="@dimen/_6sdp"

            android:id="@+id/fonts"
            android:padding="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentTop="true"
            style="@style/Font"
            />

        <TextView
        android:background="@drawable/button4"
        android:layout_marginTop="@dimen/_6sdp"

        android:id="@+id/price"
            android:padding="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
        android:layout_alignParentTop="true"
        style="@style/Font"
        />
    <TextView
        android:background="@drawable/button4"
        android:layout_marginTop="@dimen/_6sdp"

        android:id="@+id/designer"
        android:padding="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentTop="true"
        style="@style/Font"
        />
        <TextView
            android:background="@drawable/button4"
            android:layout_marginTop="@dimen/_6sdp"
android:visibility="gone"
            android:id="@+id/statues"
            android:padding="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentTop="true"
            style="@style/Font"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/_6sdp"
            android:padding="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"

            android:background="@drawable/button4"

            android:layout_centerHorizontal="true"
            android:id="@+id/layoutFileAttachment"
             android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imgFileIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />

            <TextView
                android:id="@+id/txtFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_6sdp"
            android:padding="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"

            android:background="@drawable/button4"

            android:layout_centerHorizontal="true"
            android:id="@+id/artboard"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imgFileIcon1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />

            <TextView
                android:id="@+id/txtFileName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_6sdp"
            android:padding="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"

            android:background="@drawable/button4"

            android:layout_centerHorizontal="true"
            android:id="@+id/fil_designer"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imgFileIcon2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />

            <TextView
                android:id="@+id/txtFileName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:textSize="16sp" />

        </LinearLayout>
        <RatingBar
            android:scaleX="0.8"
            android:scaleY="0.8"

            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continue11"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:text="continue"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/button3"
            android:textAllCaps="false"
            style="@style/Font">
        </androidx.appcompat.widget.AppCompatButton>



























    </LinearLayout>
</ScrollView>