<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">
    <LinearLayout      android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

    <TextView
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/font_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a font" />
    <GridView
        android:layout_width="match_parent"
        android:numColumns="2"
        android:layout_height="wrap_content"
        android:id="@+id/gride"
        android:horizontalSpacing="@dimen/_2sdp"

        android:verticalSpacing="@dimen/_3sdp"
        ></GridView>

    <TextView
        android:layout_margin="@dimen/_14sdp"
        android:id="@+id/font_text_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="suggested Fonts" />
    <GridView
        android:layout_width="match_parent"
        android:numColumns="2"
        android:layout_height="wrap_content"
        android:id="@+id/gride2"
        android:horizontalSpacing="@dimen/_2sdp"

        android:verticalSpacing="@dimen/_3sdp"
        ></GridView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continue11"
        android:layout_centerHorizontal="true"
        android:text="continue"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/button3"
        android:textAllCaps="false"
        style="@style/Font"
        >
    </androidx.appcompat.widget.AppCompatButton>

</LinearLayout>
</ScrollView>