<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_14sdp"
    android:layoutDirection="ltr"

    android:gravity="center_horizontal"
    tools:context=".UI.social_order">
    <RelativeLayout
        android:layoutDirection="ltr"
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/ellipse_9"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_width="@dimen/_30sdp"
            android:src="@drawable/arrow"
            android:layout_height="@dimen/_30sdp"/>
        <TextView
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_toRightOf="@+id/img"
            android:layout_marginTop="@dimen/_11sdp"
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Covers of books and magazines"
            android:textColor="#000000"

            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/salsa"
            />

    </RelativeLayout>

    <include

        android:layout_below="@id/linear_spinner"
        android:id="@+id/container_header_lyt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        layout="@layout/book_cover_grid"   />
    <TextView

        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_25sdp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/salsa"
        android:text="continue"
        android:background="@drawable/button3"
        android:layout_below="@id/container_header_lyt"/>
</RelativeLayout>